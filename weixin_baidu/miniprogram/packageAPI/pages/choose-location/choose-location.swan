<import src="../../../common/head.swan"/>
<import src="../../../common/foot.swan"/>

<view class="container">
  <template is="head" data="{{{title: 'chooseLocation'}}}">
</template>

  <view class="page-body">
    <view class="page-section">
      <view class="page-body-info">
        <onekit-text Class="page-body-text-small">当前位置信息</onekit-text>
        <block s-if="hasLocation === false">
          <onekit-text Class="page-body-text">未选择位置</onekit-text>
        </block>
        <block s-if="hasLocation === true">
          <onekit-text Class="page-body-text">{{locationAddress}}</onekit-text>
          <view class="page-body-text-location">
            <onekit-text>E: {{location.longitude[0]}}°{{location.longitude[1]}}′</onekit-text>
            <onekit-text>N: {{location.latitude[0]}}°{{location.latitude[1]}}′</onekit-text>
          </view>
        </block>
      </view>
      <view class="btn-area">
        <onekit-button type="primary" bindtap="chooseLocation">选择位置</onekit-button>
        <onekit-button bindtap="clear">清空</onekit-button>
      </view>
    </view>
  </view>

  <template is="foot">
</template>
</view>