<import src="../../../common/head.swan"/>
<import src="../../../common/foot.swan"/>

<view class="container">
  <template is="head" data="{{{title: 'textarea'}}}">
</template>

  <view class="page-body">
    <view class="page-section">
      <view class="page-section-title">输入区域高度自适应，不会出现滚动条</view>
      <view class="textarea-wrp">
        <onekit-textarea bindblur="bindTextAreaBlur" auto-height></onekit-textarea>
      </view>
    </view>

    <view class="page-section">
      <view class="page-section-title">这是一个可以自动聚焦的textarea</view>
      <view class="textarea-wrp">
        <onekit-textarea auto-focus="true" onekit-style="height: 3em"></onekit-textarea>
      </view>
    </view>
  </view>

  <template is="foot">
</template>
</view>