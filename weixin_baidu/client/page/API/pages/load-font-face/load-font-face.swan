<import src="../../../common/head.swan"></import>
<import src="../../../common/foot.swan"></import>

<view  class="container">
  <template  is="head" data="{{title: 'loadFontFace'}}"></template>

  <view  class="page-body">
    <view  class="page-section">
      <view  class="page-body-info display-area {{ loaded ? 'font-loaded' : '' }}">
        <text  s-if="{{!loaded}}">Load {{ fontFamily }}</text>
        <text  s-else>{{ fontFamily }} is loaded</text>
      </view>
      <view  class="btn-area">
        <wx-button  type="primary" bindtap="loadFontFace">加载字体</wx-button>
        <wx-button  type="default" bindtap="clear">清除</wx-button>
      </view>
    </view>
  </view>

  <template  is="foot"></template>
</view>
